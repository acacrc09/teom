extends layout

block content
    .container
        div.row
            if items.length > 0
                each item in items
                    div.col-sm-3.p-2
                        div.card
                            img(src=item.image)
                            div.card-body
                                h5=item.name
                                | &nbsp;
                                .badge.badge-secondary=item.interestRate+'%'                               
                            ul.list-group
                                li.list-group-item='Valor Cuota $ ' + Intl.NumberFormat().format(item.totalDividend)
                                li.list-group-item='Costo Total credito: ' + item.totalCost + ' UF'
            else
                div.card.error
                    h1='No se han encontrado articulos que coincidan con la busqueda.' 